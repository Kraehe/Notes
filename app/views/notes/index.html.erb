<table class="table table-striped" style="width: 300px">
  <tr>
    <td>Title</td>
    <td>Text</td>
    <td></td>
  </tr>
  <% @notes.each do |note| %>
    <tr>
      <td>Note</td>
      <td><%= note.text %></td>
      <td><%= link_to "View Note", notepad_path(note), class: "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>
<%= link_to "New Note", new_notepad_path, class: "btn btn-danger" %>
<%= link_to "Search Notes", search_notepad_path, class: "btn btn-danger" %>
