 <table class="table table-striped" style="width: 300px">
  <tr>
    <td>Title</td>
    <td>Text</td>
    <td></td>
    <td></td>
  </tr>
  <% @notes.each do |note| %>
  <tr>
    <td>Note</td>
    <td><%= note.text %></td>
    <td><%= link_to "View Note", folder_note_path(params[:folder_id], note), class: "btn btn-danger" %></td>
    <td><%= link_to 'Delete', folder_note_path(params[:folder_id], note), method: :delete, data: { confirm: "Are you sure you want to delete this note?"}, class: "btn btn-danger" %></td>

  </tr>
  <% end %>

</table>
<%= link_to "New Note", new_folder_note_path, class: "btn btn-danger" %>
<%= link_to "Search Notes", search_notepad_path, class: "btn btn-danger" %>
