<p id="notice"><%= notice %></p>

<h1>Folders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @folders.each do |folder| %>
      <tr>
        <td><%= folder.name %></td>
        <td><img src="<%= folder.image_url %>" width="30px" height="30px"/></td>
        <td><%= folder.desc %></td>        <td><%= link_to 'Show', folder %></td>
        <td><%= link_to 'Edit', edit_folder_path(folder) %></td>
        <td><%= link_to 'Destroy', folder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%#= paginate @folders %>
<br>
<% if params[:visible] == "true" %>
  <a href="/?visible=false">Show Hidden</a>
<% else %>
  <a href="/?visible=true">Show Visible</a>
<% end %>
<%= link_to 'New Folder', new_folder_path %>
