<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @folder.name %>
</p>

<p>
  <strong>Image:</strong>
  <img src="<%= @folder.image_url %>" width="50px"/>
</p>

<p>
  <strong>Desc:</strong>
  <%= @folder.desc %>
</p>

<p>
  <strong>Visible:</strong>
  <%= @folder.visible %>
</p>

<p>
  <strong>Notes:</strong>
  <ul><% @folder.notepads.each do |note| %>
    <li><%= link_to note.text, folder_notes_path(@folder) %></li>
  <% end %></ul>

</p>

<%= link_to 'Edit', edit_folder_path(@folder) %> |
<%= link_to 'Back', folders_path %>
