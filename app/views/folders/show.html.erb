<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @folder.name %>
</p>

<p>
  <strong>Image:</strong>
  <img src="<%= @folder.image_url %>" width="50px"/>
</p>

<p>
  <strong>Desc:</strong>
  <%= @folder.desc %>
</p>

<p>
  <strong>Visible:</strong>
  <%= @folder.visible %>
</p>
<% if @notes && @notes.any? %>
<p>
  <strong><%= link_to 'Notes:', folder_notes_path(params[:id]) %></strong>
  <ul><% @folder.notepads.each do |note| %>
    <li><%= link_to note.text, folder_note_path(@folder, note) %></li>
  <% end %></ul>
</p>
<% else %>
<p> You have no notes! </p>
<%= link_to 'Make a note', new_folder_note_path(params[:id]), class: "btn btn-danger" %><br>
<% end %>
Created <%= time_ago_in_words(@folder.created_at) %> ago
<br>
<%= link_to 'Edit', edit_folder_path(@folder) %> |
<%= link_to 'Back', folders_path %>
